---
const navItems = [
  { name: 'INDEX', href: '/' },
  { name: 'ARCHIVE', href: '/archive' },
  { name: 'KODŌ', href: '/kodo' },
];

const languages = [
    { code: 'ES', label: 'ES', href: '/' },
    { code: 'EN', label: 'EN', href: '/en' },
    { code: 'KR', label: 'KR', href: '/kr' }
]
---

<header class="py-8 flex justify-between items-baseline border-b border-white/10">
  <div class="flex flex-col">
    <a href="/" class="text-xl font-bold tracking-tighter hover:opacity-100">
      MÖP ARCHIVE <span class="text-[10px] font-normal align-top ml-1">©2026</span>
    </a>
    <p class="text-[10px] text-white/40 tracking-[0.2em]">DIGITAL ARCHITECT / CREATIVE TECH</p>
  </div>

  <nav class="flex gap-8 text-[11px] items-center">
    <div class="hidden md:flex gap-6 mr-12">
      {navItems.map(item => (
        <a href={item.href} class="hover:italic">{item.name}</a>
      ))}
    </div>
    
<div class="flex gap-3 text-white/30">
      {languages.map(lang => (
        <a 
          href={lang.href} 
          class="hover:text-white transition-colors cursor-crosshair text-[10px]"
        >
          {lang.label}
        </a>
      ))}
    </div>
  </nav>
</header>
