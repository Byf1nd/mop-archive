---
import '../../src/styles/globals.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        
        <title>{title} | MÖP ARCHIVE</title>
        <meta name="description" content="MÖP ARCHIVE - Portfolio de Paula Méndez Ortega. Arquitecta Digital e Ingeniera de Software especializada en IA y Data Science para marcas de lujo." />
        <meta name="keywords" content="MÖP ARCHIVE, Paula Méndez Ortega, Software Engineering, AI, Data Science, Luxury Fashion, Korea, Digital Architecture" />
        
        <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='75' font-size='60' font-family='monospace' font-weight='bold' fill='white'>MÖP</text></svg>" />

        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://moparchive.com/" />
        <meta property="og:title" content="MÖP ARCHIVE | Digital Architect" />
        <meta property="og:description" content="Infraestructura digital en la intersección de la moda de archivo y la tecnología." />
        <meta property="og:image" content="https://moparchive.com/images/kodo-home.png" />
        <meta name="twitter:card" content="summary_large_image" />

        <link href="https://fonts.googleapis.com/css2?family=Space+Mono:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
    </head>
    <body class="antialiased text-white selection:bg-white selection:text-black bg-[#000000]">
        
        <div class="flex flex-col min-h-screen px-6 sm:px-12 relative overflow-hidden">
            <div class="fixed inset-0 pointer-events-none opacity-[0.02] z-40 bg-[url('https://www.transparenttextures.com/patterns/stardust.png')]"></div>

            <div class="flex flex-col w-full max-w-5xl mx-auto grow relative z-10">
                <Header lang={Astro.url.pathname.startsWith('/en') ? 'EN' : Astro.url.pathname.startsWith('/kr') ? 'KR' : 'ES'} />
                <main class="grow py-12">
                    <slot />
                </main>
                <Footer />
            </div>
        </div>

        <style is:global>
            /* Reset y Scroll */
            html { 
                background-color: #000; 
                font-family: 'Space Mono', monospace; 
                cursor: crosshair; 
                scroll-behavior: smooth; 
            }
            
            /* CRT SCANLINES */
            body::after {
                content: " "; 
                display: block; 
                position: fixed; 
                top: 0; left: 0; bottom: 0; right: 0;
                background: linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.1) 50%), 
                            linear-gradient(90deg, rgba(255, 0, 0, 0.02), rgba(0, 255, 0, 0.01), rgba(0, 0, 255, 0.02));
                z-index: 99999; 
                background-size: 100% 2px, 3px 100%; 
                pointer-events: none;
            }

            /* NOISE GRAIN */
            body::before {
                content: ""; 
                position: fixed; 
                top: 0; left: 0; width: 100%; height: 100%;
                background-image: url("https://grainy-gradients.vercel.app/noise.svg");
                opacity: 0.04; 
                pointer-events: none; 
                z-index: 99998;
            }

            h1, h2, h3 { 
                text-transform: uppercase; 
                letter-spacing: -0.02em; 
                font-weight: 700; 
            }

            a { transition: all 0.3s ease-in-out; }
            a:hover { font-style: italic; opacity: 0.6; }

            ::-webkit-scrollbar { width: 4px; }
            ::-webkit-scrollbar-track { background: #000; }
            ::-webkit-scrollbar-thumb { background: #333; }
            ::-webkit-scrollbar-thumb:hover { background: #fff; }

            img {
                image-rendering: -webkit-optimize-contrast;
                image-rendering: crisp-edges;
            }
        </style>
    </body>
</html>